// fcgi doesn't have STDIN defined by default
defined('STDIN') or define('STDIN', fopen('php://stdin', 'r'));

require(__DIR__ . '/../framework/yii/Yii.php');

$id = 'yii-build';
$basePath = __DIR__;

$application = new yii\console\Application(array('id' => $id, 'basePath' => $basePath));
$application->run();
